@model Macro.Models.DashboardView
@{
    ViewData["Title"] = "Dashboard";
}


@if (Macro.Models.initial.InitialStart == false)
{
<div class="card">
    <div class="card-header">
        Circuits - Recently Added (Last 30 Days)
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.RecentCircuit.First().CCSD)</th>
                    <th>@Html.DisplayNameFor(model => model.RecentCircuit.First().Date)</th>
                </tr>
            </thead>
            @foreach (var item in Model.RecentCircuit)
            {

                <tr>
                    <td>
                        <a asp-controller="Circuits" asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.CCSD)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>

                </tr>
            }
        </table>
    </div>
</div>
<br />
@if (ClaimsLoader.Role == "Administrator")
{
    <div class="card">
        <div class="card-header">
            Discontinued - Recently Deleted (Last 30 Days)
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.RecentDisco.First().CCSD)</th>
                        <th>@Html.DisplayNameFor(model => model.RecentDisco.First().Date)</th>
                    </tr>
                </thead>
                @foreach (var item in Model.RecentDisco)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CCSD)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>

                    </tr>
                }
            </table>
        </div>
    </div>
    <br />
    <div class="card">
        <div class="card-header">
            Software - Recently Added (Last 30 Days)
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.RecentSoft.First().Manufacturer)</th>
                        <th>@Html.DisplayNameFor(model => model.RecentSoft.First().added)</th>
                    </tr>
                </thead>
                @foreach (var item in Model.RecentSoft)
                {
                    <tr>
                        <td>
                            <a asp-controller="Softwares" asp-action="Details" asp-route-id="@item.ID"> @Html.DisplayFor(modelItem => item.Manufacturer) </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.added)
                        </td>

                    </tr>
                }
            </table>
        </div>
    </div>
}
}
@{Macro.Models.initial.InitialStart = false;
}
